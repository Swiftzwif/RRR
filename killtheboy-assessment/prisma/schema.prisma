// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Submission {
  id            String   @id @default(cuid())
  answers       Json     // Record<string, number>
  reflective    Json?    // Record<string, string> (optional)
  domainScores  Json     // Record<Domain, number>
  overall       Float
  avatar        String   // Avatar type
  lowestDomains Json     // [Domain, Domain]
  createdAt     DateTime @default(now())
  
  leads Lead[]
}

model Lead {
  id           String @id @default(cuid())
  submissionId String
  email        String
  source       String @default("assessment")
  createdAt    DateTime @default(now())
  
  submission Submission @relation(fields: [submissionId], references: [id])
}
